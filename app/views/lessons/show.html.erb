<div class="top">
    <div class="class-title">
        <h2><%= @lesson.lesson_name %></h2>
    </div>
    <div class="overview">
    <p>授業概要</p>
        <%= @lesson.lesson_dcp %>
    </div>
</div>

<div class="r-btn">
    <%= link_to("レビューする","/posts/#{@lesson.id}/new") %>
    <!--<%= link_to("授業を削除する","/lessons/#{@lesson.id}/destroy",{method:"post"}) %> -->
    <% if Course.find_by(user_id:@current_user.id,lesson_id:@lesson.id) %>
        <%= link_to("履修","/couses/#{@lesson.id}/destroy",{method:"post"}) %>
    <% else %>
        <%= link_to("履修を外す","/courses/#{@lesson.id}/create",{method:"post"}) %>
    <% end %>
</div>
<div class="review">
  <% @post.each do |post| %>
    <%= link_to("/posts/#{post.id}") do %>
            <div class="contents">
                <div class="star">
                       
                </div>
                <div class="coment">
                    <%= post.content %>
                </div>
                <div class="name">
                    <%= post.user.name %>
                </div>
            </div>
        <% end %>
    
    <% end %>
   
</div>